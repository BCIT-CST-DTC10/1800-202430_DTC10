{
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "liveServer.settings.root": "/public",
    "liveServer.settings.file": "/404.html",
    "liveServer.settings.mount": [
        [
            "/",
            "./public/pages/"
        ], [
            "/login",
            "./public/pages/login.html"
        ], [
            "/profile",
            "./public/pages/profile.html"
        ], [
            "/favorite",
            "./public/pages/favorite.html"
        ], [
            "/allReview",
            "./public/pages/allReview.html"
        ], [
            "/search",
            "./public/pages/search.html"
        ], [
            "/detail",
            "./public/pages/detail.html"
        ], [
            "/review",
            "./public/pages/review.html"
        ], [
            "/map",
            "./public/pages/map.html"
        ], [
            "/create",
            "./public/pages/create.html"
        ],
    ],
    "cSpell.words": [
        "firestore",
        "flickity",
    ],
}
